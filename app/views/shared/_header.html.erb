<header>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <%= link_to 'アアイエバ For You', root_path, class: "my-0 me-md-auto font-weight-normal" %>
    <nav class="my-2 my-md-0 ms-auto">
      <%= link_to t('posts.index.title'), posts_path, class: "p-2 text-dark" %>
      <%= link_to t('posts.likes.title'), likes_posts_path, class: "p-2 text-dark" %>
      <%= link_to t('posts.new.title'), new_post_path, class: "p-2 text-dark" %>
      <%= link_to "マイページ", user_path(current_user.id), class: "p-2 text-dark" %>
      <%= link_to notifications_path, class: "nav-link" do %>
        <i class="fa-sharp fa-solid fa-bell"></i>
        通知一覧
      <% end %>
    </nav>
    <%= link_to (t 'defaults.logout'), logout_path, data: { "turbo-method": :delete }, class: "btn btn-outline-primary" %>
  </div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</header>
